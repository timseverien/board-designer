{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "indent": ["error", "tab"],
      "no-param-reassign": ["error", {
        "props": false
      }],
      "no-plusplus": "off",
      "no-tabs": "off"
    }
}
